<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style = "@style/boxlayout"  >

    <ImageView
        android:id="@+id/attraction_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/attraction_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/attraction_image"
        android:layout_marginLeft="54dp"
        android:layout_toRightOf="@+id/attraction_image"
        android:text="@string/attraction"
        android:textAppearance="?android:attr/textAppearanceLarge" />
  
</RelativeLayout>
